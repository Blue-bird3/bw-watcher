<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <div class="container">
    <form action="/" method="POST">
      <div class="row justify-content-center" style="margin-top:8%">
        
        <!-- Trade Limits-->
        <div class="col-lg-6 col-sm-12" style="margin-bottom: 40px">
          <div class="row justify-content-center">
            <h1>Trade Alert Limits</h1>
          </div>
          <div class="row justify-content-center" style="height: 25px;"></div>    
          <div class="row justify-content-center">
            <div class="col-6">
              <div class="input-group">
                <div class="input-group-prepend dropdown">
                  <button class="btn btn-default dropdown-toggle bg-warning" id="t-currency" data-toggle="dropdown">BTC<span class="caret"></span></button>
                  <ul class="dropdown-menu" id="t-menu" aria-labelledby="filterMenu">
                    <% currencies.forEach((currency) => { %>
                      <option class="dropdown-item" id="t-<%=currency%>"><%= currency %></option>
                    <% }) %>
                  </ul>
                </div>
                <div class="input-group-prepend">
                  <span class="input-group-text">$</span>
                </div>
                <input type="number" id="trade-limit" name="trade_limit_BTC" class="form-control" value="<%=trade_min.BTC%>">
              </div>
              <script>
                $('#t-menu').click((event) => {
                  let mins = <%-JSON.stringify(trade_min)%>;
                  let currency = $('#t-currency').text(event.target.id.replace('t-',"")).text();
                  $('#trade-limit').prop('name', 'trade_limit_'+currency);
                  $('#trade-limit').prop('value', mins[currency]);
                  console.log($('#trade-limit').prop('type'));
                })
              </script>
            </div>
          </div>
          <div class="row justify-content-center" style="height: 50px;"></div>    
          <div class="row justify-content-center">
            <div class="col-6">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><stong>Volume Filter</stong></span>
                </div>
                <input class="form-control" type="number"  step="0.1" name="trade_portion" value="<%=trade_portion%>">
                <div class="input-group-append">
                  <span class="input-group-text">%</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Order Limits-->
        <div class="col-lg-6 col-sm-12" style="margin-bottom: 40px">
          <div class="row justify-content-center">
            <h1>Order Alert Limits</h1>
          </div>
          <div class="row justify-content-center" style="height: 25px;"></div>    
          <div class="row justify-content-center">
            <div class="col-6">
              <div class="input-group">
                <div class="input-group-prepend dropdown">
                  <button class="btn btn-default dropdown-toggle bg-warning" id="o-currency" data-toggle="dropdown">BTC<span class="caret"></span></button>
                  <ul class="dropdown-menu" id="o-menu" aria-labelledby="filterMenu">
                    <% currencies.forEach((currency) => { %>
                      <option class="dropdown-item" id="o-<%=currency%>"><%= currency %></option>
                    <% }) %>
                  </ul>
                </div>
                <div class="input-group-prepend">
                  <span class="input-group-text">$</span>
                </div>
                <input type="number" id="order-limit" name="order_limit_BTC" class="form-control" value="<%=order_min.BTC%>">
              </div>
              <script>
                $('#o-menu').click((event) => {
                  let mins = <%-JSON.stringify(order_min)%>;
                  let currency = $('#o-currency').text(event.target.id.replace('o-',"")).text();
                  $('#order-limit').prop('name', 'order_limit_'+currency);
                  $('#order-limit').prop('value', mins[currency]);
                })
              </script>
            </div>
          </div>
          <div class="row justify-content-center" style="height: 50px;"></div>    
          <div class="row justify-content-center">
            <div class="col-5">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><stong>Min Ratio</stong></span>
                </div>
                <input class="form-control" type="number"  step="0.1" name="vol_ratio" value="<%=vol_ratio%>">
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr class="style-two">
      <div class="row justify-content-center">
        <input class="btn btn-primary" type="submit" value="Submit New Values">
      </div>
      <hr class="style-two">
  
    </form>
  </div> <!-- container --> 

  <!-- Old  View -->
  <!-- <div class="container">
    <!- - Old view goes here - ->   
  </div> -->
</body>
</html>
      